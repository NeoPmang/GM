    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const marketShareCtx = document.getElementById('marketShareChart').getContext('2d');
            new Chart(marketShareCtx, {
                type: 'doughnut',
                data: {
                    labels: ['글로벌 시장', '국내 시장'],
                    datasets: [{
                        label: '시장 점유율',
                        data: [97, 3],
                        backgroundColor: ['#0d9488', '#99f6e4'],
                        borderColor: ['#ffffff'],
                        borderWidth: 2
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: { position: 'bottom' },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    return context.label + ': ' + context.raw + '%';
                                }
                            }
                        }
                    }
                }
            });
            const installRateCtx = document.getElementById('installRateChart').getContext('2d');
            new Chart(installRateCtx, {
                type: 'bar',
                data: {
                    labels: ['중국 선도 개발사', '일반적인 업계 평균 (추정)'],
                    datasets: [{
                        label: '매출 대비 설치율',
                        data: [15, 40],
                        backgroundColor: ['#0d9488', '#a1a1aa'],
                        borderRadius: 4
                    }]
                },
                options: {
                    indexAxis: 'y',
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: { display: false },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    return context.dataset.label + ': ' + context.raw + '%';
                                }
                            }
                        }
                    },
                    scales: {
                        x: {
                            beginAtZero: true,
                            max: 50,
                            ticks: {
                                callback: function(value) {
                                    return value + '%'
                                }
                            }
                        }
                    }
                }
            });
            const tabs = document.querySelectorAll('.tab-btn');
            const tabContents = document.querySelectorAll('.tab-content');
            tabs.forEach(tab => {
                tab.addEventListener('click', () => {
                    tabs.forEach(item => {
                        item.classList.remove('active', 'bg-teal-600', 'text-white');
                        item.classList.add('bg-gray-200', 'text-gray-700');
                    });
                    tab.classList.add('active', 'bg-teal-600', 'text-white');
                    tab.classList.remove('bg-gray-200', 'text-gray-700');
                    const target = tab.getAttribute('data-tab');
                    tabContents.forEach(content => {
                        if (content.id === target) {
                            content.classList.remove('hidden');
                        } else {
                            content.classList.add('hidden');
                        }
                    });
                });
            });
            const interactiveCards = document.querySelectorAll('.interactive-card');
            const infoBox = document.getElementById('strategy-info-box');
            const infoContents = document.querySelectorAll('.info-content');
            interactiveCards.forEach(card => {
                card.addEventListener('click', () => {
                    const targetId = card.dataset.target;
                    const targetContent = document.getElementById(targetId);
                    infoBox.classList.remove('hidden');
                    infoContents.forEach(content => content.classList.add('hidden'));
                    if (targetContent) {
                        targetContent.classList.remove('hidden');
                    }
                });
            });
            const navLinks = document.querySelectorAll('.nav-link');
            const sections = document.querySelectorAll('section[id]');
            window.addEventListener('scroll', () => {
                let current = '';
                sections.forEach(section => {
                    const sectionTop = section.offsetTop;
                    if (pageYOffset >= sectionTop - 60) {
                        current = section.getAttribute('id');
                    }
                });
                navLinks.forEach(link => {
                    link.classList.remove('active');
                    if (link.getAttribute('href').includes(current)) {
                        link.classList.add('active');
                    }
                });
            });
        });
    </script>
</body>
